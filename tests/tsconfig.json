{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "noEmit": true,
        "removeComments": false,
        "noImplicitAny": true,
        "noImplicitOverride": false,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
    },
    "include": [
        "**/*.ts",
        "../src/**/*.ts",
        "../jest.config.ts",
    ],
    "exclude": [
        "node_modules",
    ],
}
